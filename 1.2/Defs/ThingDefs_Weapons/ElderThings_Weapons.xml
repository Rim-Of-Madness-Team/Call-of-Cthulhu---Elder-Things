<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ===================== Laser Gun ========================= -->
  <JecsTools.ThingDef_LaserProjectile ParentName="BaseBullet">
    <defName>Bullet_ElderThingLaserGun</defName>
    <label>laser</label>
    <graphicData>
      <texPath>Projectiles/ElderThingLaser</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <flyOverhead>false</flyOverhead>
      <speed>70</speed>
    </projectile>
    <preFiringInitialIntensity>0</preFiringInitialIntensity>
    <preFiringFinalIntensity>2</preFiringFinalIntensity>
    <postFiringInitialIntensity>2</postFiringInitialIntensity>
    <postFiringFinalIntensity>0</postFiringFinalIntensity>
    <preFiringDuration>2</preFiringDuration>
    <postFiringDuration>63</postFiringDuration>
    <StartFireChance>0.000</StartFireChance>
    <thingClass>JecsTools.Projectile_Laser</thingClass>
  </JecsTools.ThingDef_LaserProjectile>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>ElderThing_LaserGun</defName>
    <label>laser gun (elder things)</label>
    <drawOffscreen>true</drawOffscreen>
    <description>A builky laser weapon designed for beings with at least five arms to support it. This is a race restricted weapon for The Elder Things. It can fire in five directions at five seperate targets at once.</description>
    <graphicData>
      <texPath>Weapon/ElderThing_LaserGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2.60</drawSize>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <WorkToMake>50000</WorkToMake>
      <Mass>40.0</Mass>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.86</AccuracyMedium>
      <AccuracyLong>0.9</AccuracyLong>
      <RangedWeapon_Cooldown>3.16</RangedWeapon_Cooldown>
      <MarketValue>1200</MarketValue>
      <SellPriceFactor>0.2</SellPriceFactor>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>ElderThingLaserGun</researchPrerequisite>
    </recipeMaker>
    <costList>
      <Plasteel>80</Plasteel>
      <ComponentIndustrial>20</ComponentIndustrial>
    </costList>
    <generateCommonality>0.01</generateCommonality>
    <techLevel>Spacer</techLevel>
    <weaponTags>
      <li>ElderThingGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ElderThingLaserGun</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>23</range>
        <soundCast>ElderThings_LaserFire</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>pentagonal grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>blast chambers</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
    <comps>
      <li>
        <compClass>CompOversizedWeapon.CompOversizedWeapon</compClass>
      </li>
    </comps>
  </ThingDef>
</Defs>